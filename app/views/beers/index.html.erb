<p style="color: green"><%= notice %></p>

<div class="centered-page-container">
  <% content_for :title, "Beers" %>

  <h1>Beers</h1>

  <p>Number of beers: <%= @beers.count %></p>

  <%= link_to('New beer', new_beer_path) if current_user %>

  <div id="beers">
    <% @beers.each do |beer| %>
      <%= render beer %>
    <% end %>
  </div>
</div>