<%= render @beer_club %>

<% if current_user && !member_of_this_club?(@beer_club) %>
  <%= form_with(model: @membership) do |form| %>
    <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.submit "Join the beer club" %>
  <% end %>
<% end %>

<% if current_user && member_of_this_club?(@beer_club) %>
  <%= button_to "End membership", @membership, method: :delete %>
<% end %>

<h3>Members</h3>

<ul>
<% @beer_club.users.each do |user| %>
  <li>
    <%= link_to user.username, user %>
  </li>
<% end %>
</ul>

<div>
  <%= link_to "Edit this beer club |", edit_beer_club_path(@beer_club) if current_user %>
  <%= link_to "Back to beer clubs", beer_clubs_path %>

  <% if current_user %>
    <%= button_to "Destroy this beer club", @beer_club, method: :delete %>
  <% end %>
</div>
