<div>
  <% content_for :title, "Users" %>

  <h1>Users</h1>

  <div class="restricted-table-container">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Rating count</th>
          <th>Average rating</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.username, user %>
            <% if user.disabled? %>
              <span class="badge text-bg-danger">account closed</span>
            <% end %>
          </td>
          <td><%= user.ratings.size || 0 %></td>
          <td><%= user.average_rating || 0 %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
