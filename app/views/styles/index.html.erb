
<div>
  <% content_for :title, "Styles" %>

  <h1>Styles</h1>

  <p>Number of styles: <%= @styles.count %></p>

  <%= link_to 'New style', new_style_path, class: "btn btn-primary" if current_user %>

  <div class="restricted-table-container">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Beers</th>
        </tr>
      </thead>
      <tbody>
        <% @styles.each do |style| %>
        <tr>
          <td><%= link_to style.name, style %></td>
          <td><%= style.beers.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>