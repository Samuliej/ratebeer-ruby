<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>#</th>
    <th>User</th>
    <th>Ratings</th>
  </tr>
  </thead>
  <tbody>
  <% User.most_active.each_with_index do |user, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td>
        <%= link_to user.username, user %>
      </td>
      <td>
        <%= user.ratings.count %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>