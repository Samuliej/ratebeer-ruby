<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Beer</th>
    <th>Rating</th>
    <th>User</th>
    <th>
      Rated at
      <%= link_to ratings_path(page: @page, order: !@order) do %>
        <% if @order %>
          <i class="fas fa-sort-down"></i>
        <% else %>
          <i class="fas fa-sort-up"></i>
        <% end %>
      <% end %>
    </th>
  </tr>
  </thead>
  <tbody>
  <% ratings.each do |rating| %>
    <tr>
      <td>
        <%= link_to rating.beer.name, rating.beer %>
      </td>
      <td>
        <%= rating.score %> / 50
      </td>
      <td>
        <%= link_to rating.user.username, rating.user %>
      </td>
      <td><%= rating.created_at %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="2" class="text-center">
      <% unless @page == 1 %>
        <%= link_to "<<< Previous page", ratings_path(page: @page - 1, order: @order) %>
      <% end %>
    </td>
    <td colspan="2" class="text-center">
      <% unless @page == @last_page %>
        <%= link_to "Next page >>>", ratings_path(page: @page + 1, order: @order) %>
      <% end %>
    </td>
  </tr>
  </tbody>
</table>