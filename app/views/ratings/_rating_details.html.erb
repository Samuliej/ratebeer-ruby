<%= turbo_frame_tag "rating_details_#{rating.id}" do %>
<div class="mt-3">
  <h4><%= rating.beer.name %></h4>
  <p>
    <strong>Style:</strong>
    <%= rating.beer.style.name %>
  </p>

  <p>
    <strong>Brewed by:</strong>
    <%= rating.beer.brewery.name %>
  </p>

  <p>
    <strong>Rated:</strong>
    <%= rating.created_at %>
  </p>
</div>
<% end %>