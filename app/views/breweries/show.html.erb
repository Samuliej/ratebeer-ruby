
<%= render @brewery %>
<% beers_count = @brewery.beers.count %>


<% if @brewery.ratings.empty? %>
  <p>
    This brewery's <%= pluralize(beers_count, "beer") %> <% pluralize(beers_count, "has") %> not been rated yet.
  </p>
<% else %>
  <p>
    Brewery has <%= pluralize(@brewery.ratings.count, "rating") %>  with an average rating of <%= @brewery.average_rating %> / 50
  </p>
<% end %>

<div>
  <% if current_user %>
    <%= link_to "Edit this brewery", edit_brewery_path(@brewery) %> |
  <% end %>
  <%= link_to "Back to breweries", breweries_path %>
  <% if current_user %>
    <%= button_to "Destroy this brewery", @brewery, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } } %>
  <% end %>
</div>
