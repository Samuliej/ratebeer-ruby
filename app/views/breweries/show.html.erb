<div class="row d-flex align-items-center justify-content-center show-container">
  <div class="col-md-8">
    <%= render @brewery %>
    <% beers_count = @brewery.beers.count %>

    <% if @brewery.ratings.empty? %>
      <p>
        This brewery's <%= pluralize(beers_count, "beer") %> <% pluralize(beers_count, "has") %> not been rated yet.
      </p>
    <% else %>
      <p>
        Brewery has <%= pluralize(@brewery.ratings.count, "rating") %>  with an average rating of <%= @brewery.average_rating %> / 50
      </p>
    <% end %>

    <div class="mb-3">
      <% if current_user %>
        <%= edit_and_destroy_buttons(@brewery) %>
      <% end %>
    </div>
  </div>

  <div>
    <%= link_to "Back to breweries", breweries_path, class: "btn btn-secondary" %>
  </div>
</div>