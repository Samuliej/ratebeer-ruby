<div id="<%= dom_id brewery %>">

  <h2><%= link_to brewery.name, brewery %></h2>

  <p>
    <em>Established in <%= brewery.year %></em>
  </p>

  <p>
    Brewery beers: <%= brewery.beers.count %>
  </p>

  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
    <% end %>
  </p>

</div>
