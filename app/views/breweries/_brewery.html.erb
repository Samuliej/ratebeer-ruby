<div id="<%= dom_id brewery %>">
  <h2>
    <%= link_to brewery.name, brewery %>
    <% unless brewery.active %>
      <span class="badge bg-secondary">retired</span>
    <% end %>
  </h2>

  <p>
    <em>Established in <%= brewery.year %></em>
  </p>

  <p>
    Brewery beers: <%= brewery.beers.count %>
  </p>

  <% if brewery.ratings.empty? %>
    <p>
      This brewery's <%= pluralize(brewery.beers.count, "beer") %> <% pluralize(brewery.beers.count, "has") %> not been rated yet.
    </p>
  <% else %>
    <p>
      Brewery has <%= pluralize(brewery.ratings.count, "rating") %>  with an average rating of <%= brewery.average_rating %> / 50
    </p>
  <% end %>

  <div class="restricted-table-container">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Style</th>
        <th>Rating</th>
      </tr>
      </thead>
      <tbody>
      <% brewery.beers.each do |beer| %>
        <tr>
          <td><%= link_to beer.name, beer %></td>
          <td><%= link_to beer.style.name, beer.style %></td>
          <td><%= beer.average_rating %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>
