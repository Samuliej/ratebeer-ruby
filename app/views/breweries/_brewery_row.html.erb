<!-- Prevent duplication by assigning a unique id -->
<tr id="<%= dom_id(brewery) %>">
  <td><%= link_to brewery.name, brewery, data: { turbo_frame: "_top" } %></td>
  <td><%= brewery.year %></td>
  <td><%= brewery.beers.size %></td>
  <td><%= round(brewery.average_rating) %></td>
  <% if current_user&.admin? %>
    <td>
      <%= button_to "Destroy", brewery,
                    method: :delete,
                    form: { data: { turbo_confirm: "Are you sure you want to remove brewery #{brewery.name} and all it's beers?" }, class: "d-inline" },
                    class: "btn btn-danger ml-2" %>
    </td>
  <% end %>
</tr>